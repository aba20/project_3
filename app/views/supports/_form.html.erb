<%= form_for(@support) do |f| %>
  <% if @support.errors.any? %>
    <div id="error_explanation" >
      <h5 ><%= pluralize(@support.errors.count, "error") %></h5>
      <ul>
      <% @support.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>
  <div class="form-label-group">
    <%= f.label :title %><br />
    <%= f.text_field :title ,class:"form-control" %>
  </p></div>
  
  <p>
    <%= f.select :cause_id, Cause.all.collect { |p| [ p.name, p.id ] } %>

  </p>



  <p>
    <%= f.label :body %><br />
    <%= f.text_field :body %>
  </p>
  
  <p>
    <%= f.submit "Support" %>
  </p>
<% end %>