<!-- Page Content -->
  <div class="container">

    <!-- Jumbotron Header -->
    <header class="jumbotron my-4">
      <h2 class="display-3">Join The Movement!</h2>
      <p class="lead">Everyone can contribute to end the global issues  and change the world to be better place. <br/>
      Here you can find variety of causes that you can support 
      When crisis strikes, we are always among the first to respond and the last to leave. <br/>
       </p>
      <%= link_to "Call to action!", new_cause_path, class:"btn btn-primary btn-lg" %>
    </header>

    <!-- Page Features -->
    <div class="row text-center">

    <% @causes.each do |cause| %>

      <div class="col-lg-3 col-md-6 mb-4">
        <div class="card h-100">
           <%=  image_tag cause.img, class:'card-img-top'%>
          <div class="card-body">
            <h4 class="card-title"><%= cause.name%></h4>
            <p class="card-category"><%= cause.category %></p>
            <br/>
             <p class="card-text"><%= cause.description %></p>
          </div>
          <div class="card-footer">
            <td><%= link_to "Support", cause_path(cause), class:"btn btn-primary" %><td>
            <%= link_to  "Edit", edit_cause_path(cause), class: "btn btn-warning" %>
            <%= link_to  "Delete", cause_path(cause), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
      <%end%>

     
    <!-- /.row -->

  </div>
  <!-- /.container -->